.rolltemplates
  rolltemplate.sheet-rolltemplate-brp-characteristic-rolls                                  
    .sheet-template-container
      // - Display a header on the template -
      .sheet-template-header {{#header}}{{header}}{{/header}}
      // - Display the dice roll in the template -

      | {{#dice}}
      .sheet-template-row.sheet-template-roll
        .sheet-template-col
          span {{dice}} 
          span(data-i18n='rolled')
        | {{/dice}}
        |{{#threshold}}
        .sheet-template-col
          span {{threshold}} 
          span(data-i18n="target")
        | {{/threshold}}
      .sheet-template-row.sheet-template-roll        
        |{{#fumbleVal}}        
        .sheet-template-col
          span {{fumbleVal}} 
          span(data-i18n="fumble")
        | {{/fumbleVal}}
        |{{#criticalVal}}        
        .sheet-template-col
          span {{criticalVal}} 
          span(data-i18n="critical")
        | {{/criticalVal}}

      .sheet-template-row.sheet-result-row
        | {{#rollGreater() dice threshold }}
        | {{#rollLess() dice fumbleVal }}
        .sheet-rollResultFailure 
            span.text-center(data-i18n='failure') 
        | {{/rollLess() dice fumbleVal }}
        | {{#^rollLess() dice fumbleVal }}
        .sheet-rollResultFumble 
          span.text-center(data-i18n='fumble') 
        | {{/^rollLess() dice fumbleVal }}
        | {{/rollGreater() dice threshold }}      

        | {{#^rollGreater() dice threshold }}

        | {{#rollGreater() dice specialVal }}      
        .sheet-rollResultSuccess
          span.text-center(data-i18n='success')
        | {{#rollGreater() attack 0 }}
        p.attack.
          Add Damage Button (Regular)
        | {{/rollGreater() attack 0 }}

        | {{/rollGreater() dice specialVal }}      
        | {{#^rollGreater() dice specialVal }}      
        | {{#rollGreater() dice criticalVal }}      
        .sheet-rollResultSpecial
          span.text-center(data-i18n='special') 
        | {{#rollGreater() attack 0 }}
        p.attack.
          Add Damage Button (Special)
        | {{/rollGreater() attack 0 }}
        | {{/rollGreater() dice criticalVal }}      
        | {{#^rollGreater() dice criticalVal }}      
        .sheet-rollResultCritical
          span.text-center(data-i18n='critical') 
        | {{#rollGreater() attack 0 }}
        p.attack.
          Add Damage Button (Critical)
        | {{/rollGreater() attack 0 }}

        | {{/^rollGreater() dice criticalVal }}      
        | {{/^rollGreater() dice specialVal }}   
        | {{/^rollGreater() dice threshold }}                

  rolltemplate.sheet-rolltemplate-damage-rolls
    .sheet-template-container
      // - Display a header on the template -
      .sheet-template-header {{#header}}{{header}}{{/header}}
      // - Display the dice roll in the template -
      .sheet-template-body
          |{{#damage}}
          .sheet-template-row.sheet-template-damage
            .sheet-template-col
              | {{damage}}
              br
              span(data-i18n='rolled')
            | {{/damage}}

          |{{#critical}}
          .sheet-template-row.sheet-template-damage
            .sheet-template-col
              | {{critical}}
              br
              span(data-i18n='critical')
            | {{/critical}}


  rolltemplate.sheet-rolltemplate-rolls
    .sheet-template-container
      // - Display a header on the template -
      .sheet-template-header {{#header}}{{header}}{{/header}}
      // - Display the dice roll in the template -
      .sheet-template-body
        | {{#luck}}
        .sheet-template-row.sheet-template-roll
          .sheet-template-col
            span {{luck}} 
            span(data-i18n="luck")
          |{{#calamity}}
          .sheet-template-col
            span {{calamity}} 
            span(data-i18n="Benefit/Calamity")
          | {{/calamity}}
        | {{/luck}}

        | {{#dice}}
        .sheet-template-row.sheet-template-roll
          .sheet-template-col
            span {{dice}} 
            span(data-i18n='rolled')
          | {{/dice}}
          |{{#threshold}}
          .sheet-template-col
            span {{threshold}} 
            span(data-i18n="threshold")
          | {{/threshold}}
          | {{#dice}}
          .sheet-template-row.sheet-result-row
            // Modified skill is greater than 19
            | {{#rollGreater() threshold 19}}
            | {{#rollGreater() dice 19}}			
            .sheet-rollResult 
              span.text-center(data-i18n='Critical')
            | 			{{/rollGreater() dice 19}}
            |     			{{#^rollGreater() dice 19}}			
            .sheet-rollResult 
              span.text-center(data-i18n='Success')
            | 			{{/^rollGreater() dice 19}}
            |     		{{/rollGreater() threshold 19}}
            |     		{{#^rollGreater() threshold 19}}
            |     			{{#rollBetween() dice fumbleVal 20}}
            .sheet-rollResult 
              span.text-center(data-i18n='Fumble')
            | 			{{/rollBetween() dice fumbleVal 20}}
            |     			{{#^rollBetween() dice fumbleVal 20}}
            |     				{{#rollTotal() dice threshold}}
            .sheet-rollResult 
              span.text-center(data-i18n='Critical')
            | 				{{/rollTotal() dice threshold}}				
            |     				{{#^rollTotal() dice threshold}}
            |     					{{#rollGreater() dice threshold}}
            .sheet-rollResult 
              span.text-center(data-i18n='Failure')
            | 					{{/rollGreater() dice threshold}}
            |     					{{#^rollGreater() dice threshold}}      
            .sheet-rollResult 
              span.text-center(data-i18n='Success')
            | 					{{/^rollGreater() dice threshold}}
            |     				{{/^rollTotal() dice threshold}}
            |     			{{/^rollBetween() dice fumbleVal 20}}
            |     		{{/^rollGreater() threshold 19}}
          | {{/dice}}


          |{{#damage}}
          .sheet-template-row.sheet-template-damage
            .sheet-template-col
              | {{damage}}
              br
              span(data-i18n='rolled')
            | {{/damage}}
        
            |{{#knightly}}
            .sheet-template-row.sheet-template-damage
              .sheet-template-col
                | {{knightly}}
                br
                span(data-i18n='rolled')
              | {{/knightly}}

                      
              |{{#conflict}}
              .sheet-template-row.sheet-template-damage
                .sheet-template-col
                  | {{conflict}}
                  br
                  span(data-i18n='rolled')
                | {{/conflict}}


                |{{#build}}
                .sheet-template-row.sheet-template-damage
                  | {{build}}
                  br
                  span(data-i18n='rolled')

                    | {{#rollTotal() build 20}}
                    .sheet-rollResult 
                      span.text-center.capitalize(data-i18n='disaster')
                    | {{/rollTotal() build 20}}
                  | {{/build}}

                  |{{#season}}
                  .sheet-template-row.sheet-season
                    .sheet-template-col
                      | {{#rollTotal() season 1}}
                      | {{season}}
                      br
                      span(data-i18n="spring")
                      | {{/rollTotal() season 1}}
                      | {{#rollBetween() season 2 4}}
                      | {{season}}
                      br
                      span(data-i18n='summer')
                      | {{/rollBetween() season 2 4}}
                      | {{#rollBetween() season 5}}
                      | {{season}}
                      br
                      span(data-i18n='autumn')
                      | {{/rollBetween() season 5}}
                      | {{#rollTotal() season 6}}
                      | {{season}}
                      br
                      span(data-i18n='winter')
                      | {{/rollTotal() season 6}}
                    | {{/season}}

        | {{#desc}}
        .sheet-template-row
          span.sheet-template-desc {{desc}}
        | {{/desc}}
  